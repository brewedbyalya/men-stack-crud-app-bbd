<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Businesses Index</title>
  </head>
  <body>
      <div class="index-header-div">
<a class="businesses-index-link" href="/businesses">Browse Businesses</a>
   <div class="index-header-div">
      <h1>All Businesses</h1>
<a class="add-business" href="/businesses/new">Add Business</a>    </div>
		<ul>
			<% businesses.forEach(business => { %>
			<li>
				<h2>
        <a href="/businesses/<%= business._id %>"> <%= business.name %> </a>
             <% if (business.isVerified) { %>
            âœ… 
          <% } %>
				</h2>
				<p><strong>Category:</strong> <%= business.category %></p>
				<p><strong>Description:</strong> <%= business.description %></p>
				<p><strong>Location:</strong> <%= business.location %></p>
				<p><strong>Phone:</strong> <%= business.phoneNumber %></p>
				<% if (business.website) { %>
				<p>
					<strong>Website:</strong>
					<a href="<%= business.website %>" target="_blank"
						><%= business.website %></a
					>
				</p>
				<% } %>
				<hr />
                    <a class="businesses-index-link" href="/businesses">
      <div class="index-link-text">Back to All Businesses</div>
    </a>
			</li>
			<% }) %>
		</ul>
        </div>
</body>
</html>